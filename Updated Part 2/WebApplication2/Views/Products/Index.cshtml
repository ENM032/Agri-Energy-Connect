@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-action="Create" class="btn btn-lg btn-formpurple">Add new product</a>
</p>
<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="labelbtn">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="labelbtn">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
