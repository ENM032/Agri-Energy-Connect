@model WebApplication2.Areas.Identity.Data.WebApplication2User

@{
    ViewData["Title"] = "DeleteFarmer";
}

<h1>Deleting @Model.Displayname's profile...</h1>

<h3 style="color:red">Are you sure you want to delete this farmer?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Displayname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Displayname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.Count)
        </dd>
    </dl>

    <form asp-action="DeleteFarmer">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-formred">
            <i class="bi bi-trash3-fill"></i>
            Delete
        </button> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
