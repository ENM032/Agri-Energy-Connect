@model IEnumerable<WebApplication2.Areas.Identity.Data.WebApplication2User>
@{
    ViewData["Title"] = "Index";
}

<h1>Farmers</h1>

<p>
    <a asp-action="Create" class="btn btn-lg btn-formpurple">Add new farmer</a>
</p>
<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Displayname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Displayname)
                </td>
                <td>
                    <a asp-action="DeleteFarmer" asp-route-id="@item.Id" class="labelbtn">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
